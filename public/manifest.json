{
  "name": "Breathe Focus",
  "version": "0.0.7",
  "description": "Timed focus sessions will eliminate noise and calm you down",
  "permissions": [
    "activeTab",
    "storage",
    "alarms",
    "notifications"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page": "index.html",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/flower-icons-for-free16.png",
      "32": "images/flower-icons-for-free32.png",
      "48": "images/flower-icons-for-free48.png",
      "128": "images/flower-icons-for-free128.png"
    }
  },
  "icons": { 
    "16": "images/flower-icons-for-free16.png", 
    "32": "images/flower-icons-for-free32.png",
    "48": "images/flower-icons-for-free48.png",
    "128": "images/flower-icons-for-free128.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+J"
      },
      "description": "Start a timer"
    }
  },
  "manifest_version": 2
}
